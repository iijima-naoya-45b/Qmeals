<div class="container">
  <div class="shopping-container">
    <div class="split-item split-left">
      <div class="split-left__inner">
        <h3 class="text-center">お買い物リスト追加</h3>
        <%= form_with model: @shoppinglist, url: shop_lists_path do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="mb-3">
            <%= f.label :item, class: 'form-label' %><span class="text-danger">（必須）</span>
            <%= f.text_field :item, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :notes, class: 'form-label' %>
            <%= f.text_field :notes, class: "form-control" %>
          </div>

          <div class="text-center mt-3">
            <%= f.submit "追加", class: 'btn-brown' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="split-item split-right brown-script">
      <div class="split-right_inner">
        <h3 class="text-center mt-5">お買い物リスト</h3>
          <table class="table mt-4">
            <thead>
              <tr>
                <th scope="col">
                  <div class="brown-script"><%= t('shop_lists.headers.item') %></div>
                </th>
                <th scope="col">
                  <div class="brown-script"><%= t('shop_lists.headers.notes') %></div>
                </th>
                <th scope="col">
                  <div class="brown-script"></th><th scope="col"></div>
                </th>
              </tr>
            </thead>
            <tbody>
              <% if @shoppinglists.present? %>
                <% @shoppinglists.each do |shopping| %>
                  <tr>
                    <th scope="col">
                      <div class="brown-script"><%= shopping.item %></div>
                    </td>
                    <th scope="col">
                      <div class="brown-script"><%= shopping.notes %></div>
                    </td>
                    <td>
                      <%= link_to edit_shop_list_path(shopping), class: "btn btn-brown" do %>
                        <span class="btn-brown">編集</span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to shop_list_path(shopping), method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "btn btn-brown" do %>
                        <span class="btn-brown">削除</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>