<div class="container">
  <h3><div class="text-center">レシピのお気に入り</div></h3>
  <%= render 'shared/favorites' %>
  <div class="sub-back-ground">
  <% if @favorite_recipes.present? %>
    <% @favorite_recipes.each do |recipe| %>
      <div class="favorite-recipe">
        <div style="display: flex; align-items: center;">
          <%= render 'recipe_unfavorite', {recipe: recipe} %>
          <h3 style="margin-left: 10px;"><%= link_to recipe.title, recipe_path(recipe), class: 'brown-script' %></h3>
        </div>
        <% recipe.recipe_tags.each do |tag| %>
          <span>
            <div class="btn-brown-script"><%= tag.name %></div>
          </span>
        <% end %>
        <p style="margin-top: 10px;">
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.photo_url, class: 'img-fluid mx-auto d-block', style: 'width:800px; height:600px;' %>
          <% end %>
        </p>
        <div class="bottom-boarder"></div>
      </div>
      <% end %>
  <% else %>
    <div class='flex text-center'>
      <p>お気に入りを登録すると、ここに表示されます!!</p>
      <p>お気に入りの使用方法はこちら</p>
      <p><%= render 'shared/how_to_favorite' %></p>
    </div>
  <% end %>
  </div>
</div>